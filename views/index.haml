-@posts.each do |post|
  -@post = post
  =haml :post_single, :layout => nil
.page
  -if @current_page > 2
    %a{:href => domain('/?page=1')}="<<"
  -if @current_page > 1
    %a{:href => domain("/?page=#{@current_page - 1}")}="<"
  %span.bold=@current_page
  -if @current_page < @page_count + 1
    %a{:href => domain("/?page=#{@current_page + 1}")}=">"
  -if @current_page < (@page_count)
    %a{:href => domain("/?page=#{@page_count + 1}")}=">>"
